# DNSMon Docker Compose Configuration
# Copy this file to docker-compose.yml and customize as needed

services:
  postgres:
    image: postgres:16
    container_name: dnsmon-postgres
    environment:
      POSTGRES_DB: dnsmon
      POSTGRES_USER: dnsmon
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-changeme}
    volumes:
      - dnsmon_postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U dnsmon"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped
    # Uncomment to expose postgres port for external access
    # ports:
    #   - "5432:5432"

  app:
    # Use pre-built image from GitHub Container Registry
    image: ghcr.io/darthnorse/dnsmon:latest
    # Or build locally:
    # build:
    #   context: .
    #   dockerfile: Dockerfile
    container_name: dnsmon-app
    depends_on:
      postgres:
        condition: service_healthy
    environment:
      DATABASE_URL: postgresql://dnsmon:${POSTGRES_PASSWORD:-changeme}@postgres:5432/dnsmon
      TZ: ${TZ:-UTC}
      # Session security - set a persistent secret key for production
      # Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
      # DNSMON_SECRET_KEY: your-secret-key-here
      # Set to "true" if running behind HTTPS
      # DNSMON_COOKIE_SECURE: "false"
    volumes:
      - dnsmon_logs:/app/logs
    ports:
      - "8000:8000"
    restart: unless-stopped

volumes:
  dnsmon_postgres_data:
  dnsmon_logs:
